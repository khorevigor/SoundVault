<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MainTheme" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/deep_purple</item>
        <item name="colorAccent">@color/rose</item>
        <item name="android:textColorPrimary">@color/light_gray</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="textColorAccent">?colorAccent</item>
        <item name="iconColorPrimary">@color/light_gray</item>
        <item name="iconColorSecondary">@color/gray</item>
        <item name="iconColorAccent">?colorAccent</item>
        <item name="switchBackgroundColorOn">@color/rose_transparent</item>
        <item name="switchBackgroundColorOff">@color/gray_transparent</item>
        <item name="radioButtonStyle">@style/AccentRadioButton</item>
        <item name="switchStyle">@style/AccentSwitch</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
</resources>